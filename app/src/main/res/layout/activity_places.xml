<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlacesA"
    android:background="@drawable/top_background">
    <TextView android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:textSize="40dp"
        android:text="Title"/>
    <SearchView android:id="@+id/search" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/search" android:layout_below="@+id/title" android:text="search"/>
    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/dry"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom"
        android:background="@color/white"
        android:layout_marginTop="750dp"
        app:menu="@menu/bottom_nav"


        />
</LinearLayout>